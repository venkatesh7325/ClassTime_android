<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">

            <solid android:color="@color/dash_board_gray_darker" />

            <stroke
                android:width="0dp"
                android:color="@color/colorPrimary_hod" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:radius="5dp" />

        </shape>
    </item>
    <item android:state_selected="true" >
        <shape
            android:shape="rectangle">

            <solid android:color="@color/dash_board_gray_darker" />
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimary_hod" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:radius="5dp" />

        </shape>
    </item>
    <item  >
        <shape
            android:shape="rectangle">

            <solid android:color="@color/dash_board_gray_darker" />

            <stroke
                android:width="0dp"
                android:color="@color/dash_board_gray_darker" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:radius="5dp" />

        </shape>
    </item>
</selector>

