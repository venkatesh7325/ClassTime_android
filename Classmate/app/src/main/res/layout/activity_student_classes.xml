<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.com.classmate.ui.activities.students.StudentClassesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/studnet_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_ten_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_ten_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_blue_circle"
                    android:layout_width="@dimen/app_twenty_dp"
                    android:layout_height="@dimen/app_twenty_dp"
                    android:src="@drawable/blue_circle" />

                <org.com.classmate.utils.customfonts.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:text="9.00 AM"
                    android:textColor="@color/app_black_buttons_bg_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/class_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:background="@color/dash_board_gray" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:layout_marginRight="@dimen/app_ten_dp"
                    android:background="@color/app_white_buttons_bg_color"
                    app:cardCornerRadius="@dimen/app_five_dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/app_fifteen_dp">

                        <org.com.classmate.utils.customfonts.CustomTextViewBold
                            style="@style/match_wrap"
                            android:text="Computers"
                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_twenty_two_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/profile_icon"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="Rajesh Ram"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/time_clock"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="1 Hour 30 minutes"
                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/home"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="Computers and science"

                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginLeft="@dimen/app_thirty_dp"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:text="3rd,block 2nd room"
                            android:textSize="@dimen/app_eighteen_sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_ten_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/app_twenty_dp"
                    android:layout_height="@dimen/app_twenty_dp"
                    android:src="@drawable/blue_circle" />

                <org.com.classmate.utils.customfonts.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:text="11.00 AM"
                    android:textColor="@color/app_black_buttons_bg_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_fifteen_dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:background="@color/dash_board_gray" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:layout_marginRight="@dimen/app_ten_dp"
                    android:background="@color/app_white_buttons_bg_color"
                    app:cardCornerRadius="@dimen/app_five_dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/app_fifteen_dp">

                        <org.com.classmate.utils.customfonts.CustomTextViewBold
                            style="@style/match_wrap"
                            android:text="Graphics"
                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_twenty_two_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/profile_icon"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="Venkatesh"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/time_clock"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="1 Hour 30 minutes"
                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:drawableLeft="@drawable/home"
                            android:drawablePadding="@dimen/app_five_dp"
                            android:text="Computers and science"

                            android:textColor="@color/app_black_buttons_bg_color"
                            android:textSize="@dimen/app_eighteen_sp" />

                        <org.com.classmate.utils.customfonts.CustomTextViewMedium
                            style="@style/wrap_wrap"
                            android:layout_marginLeft="@dimen/app_thirty_dp"
                            android:layout_marginTop="@dimen/app_ten_dp"
                            android:text="3rd,block 2nd room"
                            android:textSize="@dimen/app_eighteen_sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
