<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fivedp"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/fivedp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/app_five_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/app_five_dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/student_image"
                    android:layout_width="@dimen/app_seventy_dp"
                    android:layout_height="@dimen/app_seventy_dp"
                    android:src="@drawable/user_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_ten_dp"
                    android:orientation="vertical">

                    <org.com.classmate.utils.customfonts.CustomTextViewMedium
                        android:id="@+id/tv_student_rollnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/app_five_dp"
                        android:text="10HN12009"
                        android:textColor="@color/app_black_buttons_bg_color"
                        android:textSize="@dimen/app_eighteen_sp" />

                    <org.com.classmate.utils.customfonts.CustomTextViewRegular
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venkatesh"
                        android:textColor="@color/app_black_buttons_bg_color"
                        android:textSize="@dimen/app_sixteen_sp" />

                    <org.com.classmate.utils.customfonts.CustomTextViewMedium
                        android:id="@+id/tv_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/app_five_dp"
                        android:layout_weight="1"
                        android:drawableLeft="@android:drawable/ic_menu_call"
                        android:drawableTint="@color/app_green_color"
                        android:gravity="center_vertical"
                        android:text="9980454920"
                        android:textColor="@color/app_green_color"
                        android:textSize="@dimen/app_sixteen_sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_ten_dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_call_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/phone" />


                <ImageView
                    android:id="@+id/img_sms_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/message" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
